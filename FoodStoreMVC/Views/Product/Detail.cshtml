@model FoodStoreMVC.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div class="form-group">
    <label>Product ID</label>
    <p class="form-control-static">@Model.Id</p>
</div>

<div class="form-group">
    <label>Product Name</label>
    <p class="form-control-static">@Model.Name</p>
</div>

<div class="form-group">
    <label>Price</label>
    <p class="form-control-static">@Model.Price.ToString("C")</p>
</div>

<div class="form-group">
    <label>Stock</label>
    <p class="form-control-static">@Model.Stock</p>
</div>

<div class="form-group">
    <label>Description</label>
    <p class="form-control-static">@Model.Description</p>
</div>

<div class="form-group">
    <label>Category</label>
    <p class="form-control-static">@Model.Category.Name</p>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to Products List</a>
