@model FoodStoreMVC.Models.Product
@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Name">Tên sản phẩm</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label for="Price">Giá</label>
        <input type="number" class="form-control" asp-for="Price" />
    </div>
    <div class="form-group">
        <label for="CategoryId">Danh mục</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label for="Stock">Hàng tồn kho</label>
        <input type="number" class="form-control" asp-for="Stock" />
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>
