@model FoodStoreMVC.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h2>Category Details</h2>

<div class="form-group">
    <label>Category ID</label>
    <p class="form-control-static">@Model.Id</p>
</div>

<div class="form-group">
    <label>Category Name</label>
    <p class="form-control-static">@Model.Name</p>
</div>

<div class="form-group">
    <label>Description</label>
    <p class="form-control-static">@Model.Description</p>
</div>

<h3>Products in this Category</h3>
@if (Model.Products != null && Model.Products.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Stock</td>
                    <td>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products in this category.</p>
}

<a asp-action="Index" class="btn btn-secondary">Back to Categories List</a>
