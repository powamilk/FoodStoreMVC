@model Order

@{
    ViewData["Title"] = "Xóa đơn hàng";
}

<h2>Xóa đơn hàng</h2>

<div>
    <h4>Bạn có chắc chắn muốn xóa đơn hàng này?</h4>
    <div>
        <strong>Mã khách hàng: </strong> @Model.CustomerId
    </div>
    <div>
        <strong>Ngày đặt hàng: </strong> @Model.OrderDate
    </div>
    <div>
        <strong>Tổng số tiền: </strong> @Model.TotalAmount
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
