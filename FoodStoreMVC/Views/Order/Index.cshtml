@model IEnumerable<Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}

<h2>Danh sách đơn hàng</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Tạo đơn hàng</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Ngày đặt hàng</th>
            <th>Tổng số tiền</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate</td>
                <td>@order.TotalAmount</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id">Chi tiết</a> |
                    <a asp-action="Edit" asp-route-id="@order.Id">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@order.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
